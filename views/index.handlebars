<h1>Burgers!</h1>

<h2>Create and devour burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> burgers devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger-name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Hungry
  </div>

  <button type="submit">Devour it!</button>
</form>
